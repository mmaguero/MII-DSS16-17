<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Presentacion">

    <LinearLayout
        android:id="@+id/lyt_presentacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lyt_cabecera"
            android:layout_width="fill_parent"
            android:layout_height="143dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/man"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/man" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_texto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_presentacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="Arial"
                android:text="@string/invitacion"
                android:textSize="17dp"
                android:typeface="serif" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/lyt_botones"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:columnCount="1"
            android:orientation="horizontal"
            android:rowCount="3">

            <Button
                android:id="@+id/btnQuiz"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#009999"
                android:text="@string/ir_quiz"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnJuego"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#009999"
                android:text="@string/ir_juegos"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnVolver_"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#009999"
                android:text="@string/volver"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold"
                android:visibility="visible" />

        </GridLayout>
    </LinearLayout>
</RelativeLayout>
